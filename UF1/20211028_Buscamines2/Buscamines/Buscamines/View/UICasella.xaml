<UserControl
    x:Class="Buscamines.View.UICasella"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Buscamines.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="80"
    Width="80"
    Height="80">

    <Grid>
        <Border  x:Name="brdBottom" Background="White" BorderBrush="Gray" BorderThickness="1">
            <TextBlock x:Name="txbNumero" Foreground="Red" TextAlignment="Center" 
                       FontSize="40" HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBlock>
        </Border>
        <Border x:Name="brdTop" Background="#cccccc"   Tapped="brdTop_Tapped" RightTapped="brdTop_RightTapped">
            <TextBlock x:Name="txbBanderola"
                Foreground="Red" TextAlignment="Center" 
                       Text=""
                       FontSize="40" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
